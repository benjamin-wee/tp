<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
      <URL value="@ApplicationListCard.css" />
    </stylesheets>
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="companyName" text="\$first" styleClass="cell_big_label" />
      </HBox>
      <Label fx:id="jobTitle" styleClass="cell_small_label" text="\$jobTitle" />
      <Label fx:id="internshipStatus" styleClass="cell_small_label" text="\$internshipStatus" />
      <Label fx:id="interviewDate" styleClass="cell_small_label" text="\$interviewDate" visible="false" managed="false"/>
      <Label fx:id="phone" styleClass="cell_small_label" visible="false" managed="false" />
      <Label fx:id="email" styleClass="cell_small_label" visible="false" managed="false" />
      <Label fx:id="resume" styleClass="cell_small_label" visible="false" managed="false" />
      <Label fx:id="coverLetter" styleClass="cell_small_label" visible="false" managed="false" />
      <VBox fx:id="reviews" />
    </VBox>
  </GridPane>
</HBox>
